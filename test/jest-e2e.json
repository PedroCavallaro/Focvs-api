{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": "spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@shared/(.*)$": "<rootDir>../src/shared/$1",
    "^src/(.*)$": "<rootDir>../src/$1",
    "^test/(.*)$": "<rootDir>/$1"
  },
  "testTimeout": 50000
}
